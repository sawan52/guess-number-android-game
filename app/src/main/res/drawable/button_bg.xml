<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorPrimaryDark">

    <!--
    <gradient
        android:endColor="#009EFD"
        android:startColor="#2AF598"
        android:type="linear" />
